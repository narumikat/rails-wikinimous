<div class="container">
  <div class="d-flex justify-content-between align-items-center my-4">
    <i class="fa-solid fa-book mx-4"></i>
    <%= link_to 'New Article', new_article_path, class: "btn btn-primary mx-4"%>
  </div>
  <div class="row mt-4">
    <% @articles.each do |article| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= article.title %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= article.subtitle %></h6>
            <div class="mt-auto">
              <%= link_to 'Read More', article_path(article), class: "btn btn-secondary"%>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<style>
  .card {
    height: 150px;
  }

  i {
    font-size: 3rem;
    color: #0d6efd
  }
</style>
